<Page x:Class="GUI.FilmBewerten"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="FilmBewerten">

    <Page.Background>

        <ImageBrush ImageSource="Image/Kino1.jpg" />

    </Page.Background>

    <Grid Margin="15,0,-15,0">
        <Label Content="Film Bewerten" HorizontalAlignment="Left" Margin="172,42,0,0" VerticalAlignment="Top" FontSize="20" Height="39" Width="178" FontFamily="Algerian" FontWeight="Bold" FontStyle="Italic" >
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FFB6B6B6"/>
                    <GradientStop Color="#FFD8D8D8"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Label Content="Bisherige Bewertung für:" HorizontalAlignment="Left" Margin="99,100,0,0" VerticalAlignment="Top" Foreground="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Background="Black" Width="174" FontWeight="Bold" FontSize="14"/>
        <CheckBox x:Name="ein" Content="1 *" HorizontalAlignment="Left" Margin="120,229,0,0" VerticalAlignment="Top" Foreground="White" Width="48" FontWeight="Bold" Checked="CheckBox_Checked"/>
        <CheckBox x:Name="zwei" Content="2 *" HorizontalAlignment="Left" Margin="180,229,0,0" VerticalAlignment="Top" Foreground="White" Width="48" FontWeight="Bold" Checked="Zwei_CheckBox"/>
        <CheckBox x:Name="drei" Content="3 *" HorizontalAlignment="Left" Margin="240,229,0,0" VerticalAlignment="Top" Foreground="White" Width="48" FontWeight="Bold" Checked="Drei_CheckBox"/>
        <CheckBox x:Name="vier" Content="4 *" HorizontalAlignment="Left" Margin="300,229,0,0" VerticalAlignment="Top" Foreground="White" Width="48" FontWeight="Bold" Checked="Vier_CheckBox"/>
        <CheckBox x:Name="fuenf" Content="5 *" HorizontalAlignment="Left" Margin="360,229,0,0" VerticalAlignment="Top" Foreground="White" Width="48" FontWeight="Bold" Checked="fuenf_Checked"/>
        <Button x:Name="BewertungButton" Content="Bewertung abgeben" HorizontalAlignment="Left" Margin="172,277,0,0" VerticalAlignment="Top" Width="146" Height="37" Click="BewertungButton_Click"/>

    </Grid>
</Page>
