<Page x:Class="GUI.StartBildschirm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="StartBildschirm">
    <Page.Background>

        <ImageBrush ImageSource="Image/Kino1.jpg" />

    </Page.Background>

    <Grid>
        <Label Content="Willkommen bei C#nema" HorizontalAlignment="Left" Margin="119,45,0,0" VerticalAlignment="Top" FontSize="24" Height="39" Width="312" FontFamily="Algerian" FontWeight="Bold" FontStyle="Italic" >
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FFB6B6B6"/>
                    <GradientStop Color="#FFD8D8D8"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Button x:Name="KundenLogin" Content="Kunden-Login" HorizontalAlignment="Left" Margin="110,124,0,0" VerticalAlignment="Top" Width="103" Height="35" Click="Kunden_Login"/>
        <Label Content="Kunden-ID:" HorizontalAlignment="Left" Margin="232,115,0,0" VerticalAlignment="Top" Foreground="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Background="Black" Width="75"/>
        <Label Content="Passwort:" HorizontalAlignment="Left" Margin="232,144,0,0" VerticalAlignment="Top" Foreground="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Background="Black" Width="75"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="307,116,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" TextChanged="KundenID_TextBox"/>
        <Label Content="Noch kein Kunde?" HorizontalAlignment="Left" Margin="196,194,0,0" VerticalAlignment="Top" Foreground="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Background="Black" Width="111"/>
        <Button  x:Name="Registrieren" Content="Registrieren" HorizontalAlignment="Left" Margin="312,196,0,0" VerticalAlignment="Top" Width="96" Click="Registrieren_TextBox"/>
        <Button x:Name="AdminLogin" Content="Admin-Login" HorizontalAlignment="Left" Margin="110,261,0,0" VerticalAlignment="Top" Width="103" Height="35" Click="Admin_Login"/>
        <Label Content="Passwort:" HorizontalAlignment="Left" Margin="232,266,0,0" VerticalAlignment="Top" Foreground="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Background="Black" Width="75"/>
        <PasswordBox x:Name="AdminPasswort_txt" HorizontalAlignment="Left" Margin="307,266,0,0" VerticalAlignment="Top" Width="120" Height="23" MaxLength="15" PasswordChar="*" />
        <PasswordBox x:Name="KundenPasswort_txt" HorizontalAlignment="Left" Margin="307,147,0,0" VerticalAlignment="Top" Width="120" Height="23" MaxLength="15" PasswordChar="*" />


    </Grid>
</Page>
